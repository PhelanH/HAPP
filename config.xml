<?xml version="1.0" encoding="UTF-8"?>
	<widget xmlns = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
		id        = "de.applikationswerk.hannoverguide"
		versionCode="14"
		version   = "2.0.6">
		<name>HannoverApp</name>
		<description>HannoverApp</description>
		<author href="https://www.applikationswerk.de" email="info@applikationswerk.de">Applikationswerk GmbH</author>
		<preference name="phonegap-version" value="cli-5.1.1" />
		<preference name="BackupWebStorage" value="none" />
		<preference name="orientation" value="portrait" />
		<preference name="target-device" value="universal" />
		<preference name="deployment-target" value="7.0" />		
		<preference name="fullscreen" value="false" />
		<preference name="webviewbounce" value="false" />
		<preference name="prerendered-icon" value="false" />
		<preference name="stay-in-webview" value="false" />
		<preference name="ios-statusbarstyle" value="default" />
		<preference name="detect-data-types" value="false" />
		<preference name="disable-cursor" value="false" />
		<preference name="android-minSdkVersion" value="14" />
		<preference name="android-installLocation" value="auto" />
		<preference name="load-url-timeout" value="100000" />
		<gap:plugin name="org.apache.cordova.console" />
		<gap:plugin name="org.apache.cordova.network-information" />
		<gap:plugin name="org.apache.cordova.globalization" />
		<gap:plugin name="com.phonegap.plugin.statusbar" />
		<gap:plugin name="org.apache.cordova.geolocation" />	
		<gap:plugin name="org.apache.cordova.inappbrowser" />
		<gap:plugin name="org.apache.cordova.device" />		
		<gap:plugin name="org.apache.cordova.dialogs"/>
		<gap:plugin name="org.apache.cordova.splashscreen"/>
		<gap:plugin name='org.crosswalk.engine' version='1.3.0' source='pgb' />		
		<gap:plugin name="com.ionic.keyboard" />		
		<preference name="backgroundColor" value="0x00000000" />
		<preference name="AutoHideSplashScreen" value="false" />
		<preference name="SplashScreenDelay" value="0"/>	
		<preference name="ShowSplashScreenSpinner" value="false" />
		<preference name="KeyboardShrinksView" value="true" />
		<preference name="android-windowSoftInputMode" value="stateHidden|adjustResize" />
		<gap:plugin name="nl.x-services.plugins.insomnia" />	
		<feature name="http://api.phonegap.com/1.0/network"/>
		<access origin="*" subdomains="true"  />
		<icon src="icon.png" />
		<icon src="icons/ios/icon.png" gap:platform="ios" width="57" height="57" />
		<icon src="icons/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
		<icon src="icons/ios/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
		<icon src="icons/ios/icon-60.png" gap:platform="ios" width="60" height="60" />
		<icon src="icons/ios/icon-60@2x.png" gap:platform="ios" width="120" height="120" />
		<icon src="icons/ios/icon-76.png" gap:platform="ios" width="76" height="76" />
		<icon src="icons/ios/icon-76@2x.png" gap:platform="ios" width="152" height="152" />
		<icon src="icons/ios/icon-small.png" gap:platform="ios" width="29" height="29" />
		<icon src="icons/ios/icon-small@2x.png" gap:platform="ios" width="58" height="58" />
		<icon src="icons/ios/icon-40.png" gap:platform="ios" width="40" height="40" />
		<icon src="icons/ios/icon-40@2x.png" gap:platform="ios" width="80" height="80" />
		<!-- retina iPad support: PhoneGap 2.5.0+ only -->
		<icon src="icons/ios/icon-72_at_2x.png" gap:platform="ios" width="144" height="144" />
		<icon src="icons/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
		<icon src="icons/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
		<icon src="icons/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
		<icon src="icons/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
		<gap:splash src="splash.png" />
		<gap:splash src="splash/ios/default/Default.png" gap:platform="ios" width="320" height="480" />
		<gap:splash src="splash/ios/default/Default@2x.png" gap:platform="ios" width="640" height="960" />
		<!-- iPhone 5 / iPod Touch (5th Generation) -->
		<gap:splash src="splash.png" gap:platform="ios" width="640" height="1136" />		
		<gap:splash src="splash/phonegap/drawable-ldpi/splash.png" gap:platform="android" gap:qualifier="ldpi" />
		<gap:splash src="splash/phonegap/drawable-mdpi/splash.png" gap:platform="android" gap:qualifier="mdpi" />
		<gap:splash src="splash/phonegap/drawable-hdpi/splash.png" gap:platform="android" gap:qualifier="hdpi" />
		<gap:splash src="splash/phonegap/drawable-xhdpi/splash.png" gap:platform="android" gap:qualifier="xhdpi" />		
		<gap:config-file platform="ios" parent="UIStatusBarHidden">
			<true/>
		</gap:config-file>
		<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
				<false/>
		</gap:config-file>
	</widget>
